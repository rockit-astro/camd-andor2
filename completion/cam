_cam()
{
    compopt +o default
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    opts="red blue"

    case "${prev}" in
        blue)
            opts="status preview save exposure dir prefix frameno shutter gain readout bin window start init temperature cooleroff kill reboot"
            ;;
        red)
            opts="status preview save exposure dir prefix frameno shutter gain readout bin window start init temperature cooleroff kill reboot"
            ;;
        gain)
            opts="high medium low"
            ;;
        readout)
            opts="a b c d"
            ;;
        shutter)
            opts="auto dark"
            ;;
        save)
            opts="enable disable"
            ;;
        start)
            opts="continuous"
            ;;
        dir)
            # Fall back to readline completion for dirs (from the -o default)
            compopt -o default
            COMPREPLY=()
            return 0
            ;;
        *)
            ;;
    esac

    COMPREPLY=($(compgen -W "${opts}" -- ${cur}))
    return 0
}

complete -F _cam cam
